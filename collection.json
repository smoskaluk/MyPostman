	"item": [
		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const res = pm.response.json();\r",
							"\r",
							"pm.test(\"Status code is valid\", () => {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 403, 422]);\r",
							"    pm.collectionVariables.set(\"authToken\", res.user.token);\r",
							"});\r",
							"\r",
							"if (pm.response.code === 200) {\r",
							"    pm.test(\"Login successful - token exists\", () => {\r",
							"        pm.expect(res.user.token).to.be.a(\"string\").and.not.empty;\r",
							"    });\r",
							"} else {\r",
							"    pm.test(\"Login failed - error exists\", () => {\r",
							"        pm.expect(res).to.have.property(\"errors\");\r",
							"    });\r",
							"}\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Token {{authToken}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"user\": {\r\n    \"email\": \"{{email}}\",\r\n    \"password\": \"{{password}}\"\r\n  }\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}users/login",
					"host": [
						"{{baseUrl}}users"
					],
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
